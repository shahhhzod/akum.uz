server {
    listen 80;
    server_name 185.217.131.163 akum.uz;  # Замените на ваш IP или домен

    location = /favicon.ico { access_log off; log_not_found off; }
    
    location /static/ {
        alias /var/www/akum.uz/staticfiles/;  # Убедитесь, что этот путь правильный
    }

    location /media/ {
        alias /var/www/akum.uz/media/;  # Убедитесь, что этот путь правильный
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/var/www/akum.uz/akum.sock;
    }

    client_max_body_size 20M;  # Максимальный размер файла для загрузки
}

